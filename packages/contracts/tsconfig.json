{
  "include": ["./types"],
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
